.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-top: 10px;
}

.container .header{
    display: flex;
    flex-direction: row;
    margin-left: 8px;
}

.container .search{
    width: 630rpx;
    height: 30px;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    border: 1px solid;
    border-radius: 50px;
    background-color: #f5f5f5;
}

.container .search input{
    width: 500rpx;
}

.container .search image{
    width: 16px;
    height: 16px;
}
.container .search image:nth-child(1){
    margin-left: 12px;
    margin-right: 8px;
}
.container .search .cancel-img{
    padding: 8px;
}

.container .cancel{
    text-align: center;
    line-height: 30px;
    width: 60px;
}


.history {
    width: 690rpx;
    margin: 40rpx 0 20rpx 0;
    display: flex;
    font-size: 14px;
    margin-top:100rpx;
    flex-direction: column;
  }
  
  .hot-search{
    margin-top:70rpx;
  }
  
  .title {
    line-height: 15px;
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  
.chunk {
    height: 15px;
    width: 5px;
    background-color: #000;
    display: inline-block;
    margin-right: 10px;
  }
  
  .tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 24rpx;
    padding-left: 15px;
    width: 630rpx;
  }
  
  .tags tag-cmp {
    margin-right: 10px;
    margin-bottom: 10px;
  }

  .empty-tip {
  display: inline-block;
  width: 100%;
  text-align: center;
  position: absolute;
  top: 50%;
  right: 1%;
}
  