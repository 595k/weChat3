/* pages/cloud/cloud.wxss */
.container{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 34rpx;
}

.container .avatar{
    border-radius: 50%;
    width: 80px;
    height: 80px;
    margin-bottom: -10px;
}

.container view{
    width: 95%;
    margin-top: 10px;
}

.container input,textarea{
    padding-left: 5px;
    border:solid gray 1px;
}

.container text,.select{
    width: 100%;
    line-height: 52px;
    color: #007aff;
}


.container .buttonData{
    display: flex;
    flex-direction: row;

}

.container .buttonData button{
    width: 40%;
}

    