.container{
    display: flex;
    flex-direction: column;
    height: 100%;
}

.container .book-list{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.container .search-book{
    width: 80%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border: 1px solid;
    padding:3px 0px;
    border-radius: 50pc;    
    background-color: #f5f5f5;
    margin-top: 10px;
}

.container .search-book image{
    width: 16px;
    height: 16px;
    margin-right: 5px;
}

.container .search-book text{
    color:#999999;
}

.container .title{
    text-align: center;
    margin-top: 5px;
}